# Bell24h Dashboard - Environment Variables Template
# Copy this file to .env and fill in the values for your environment

# ==== Server Configuration ====
PORT=3000                   # Main application server port
API_URL=http://localhost:3000/api  # URL to access API endpoints
NODE_ENV=development        # Environment (development, test, production)

# ==== Database Configuration ====
# PostgreSQL Connection
DATABASE_URL=postgresql://username:password@localhost:5432/bell24h
# Connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==== WebSocket Configuration ====
WS_PORT=8080                # WebSocket server port
PROXY_PORT=5003             # WebSocket proxy port
SSE_PORT=5004               # Server-Sent Events port

# ==== Authentication & Security ====
JWT_SECRET=your-jwt-secret-key-here  # Secret for JWT tokens (CHANGE THIS!)
JWT_EXPIRY=24h              # JWT token expiry
COOKIE_SECRET=your-cookie-secret-here  # Cookie encryption secret (CHANGE THIS!)
BCRYPT_SALT_ROUNDS=10       # Rounds used for password hashing

# ==== External Services ====
# Cloudinary for media storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Make.com integration for workflow automation
MAKE_API_URL=https://hook.make.com/your-webhook-id
MAKE_API_KEY=your-make-api-key

# ==== CRM Integration ====
# Zoho CRM 
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

# Salesforce CRM
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_REFRESH_TOKEN=your-salesforce-refresh-token
SALESFORCE_INSTANCE_URL=your-salesforce-instance-url

# ==== Blockchain Integration ====
# Polygon Mumbai Network
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com/
POLYGON_CHAIN_ID=80001
POLYGON_PRIVATE_KEY=your-private-key  # NEVER commit the actual key
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000  # The deployed contract address

# ==== AI & Perplexity Features ====
OPENAI_API_KEY=your-openai-api-key  # For perplexity analysis
NLP_MODEL_PATH=./models/nlp       # Path to stored NLP models
PERPLEXITY_THRESHOLD=50.0         # Threshold for perplexity warnings

# ==== Email Configuration ====
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@bell24h.com

# ==== Monitoring & Logging ====
LOG_LEVEL=info               # Log level (error, warn, info, verbose, debug, silly)
SENTRY_DSN=your-sentry-dsn   # Error tracking with Sentry

# ==== Feature Flags ====
ENABLE_BLOCKCHAIN=true       # Enable/disable blockchain features
ENABLE_PERPLEXITY=true       # Enable/disable perplexity features
ENABLE_WEBSOCKETS=true       # Enable/disable WebSocket functionality
ENABLE_SSE=true              # Enable/disable Server-Sent Events
ENABLE_VOICE_RFQ=true        # Enable/disable voice RFQ feature
ENABLE_VIDEO_RFQ=true        # Enable/disable video RFQ feature

# ==== GST Validation ====
GST_API_URL=https://gst-api.example.com
GST_API_KEY=your-gst-api-key

# ==== Dispute Resolution ====
DISPUTE_RETENTION_DAYS=90    # Number of days to retain dispute evidence

