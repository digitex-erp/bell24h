{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install && npx prisma generate",
  "env": {
    "NEXTAUTH_URL": "https://bell24h.com",
    "NEXTAUTH_SECRET": "your-secret-key-here"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "https://bell24h.com/(.*)",
      "destination": "https://www.bell24h.com/$1",
      "permanent": true
    },
    {
      "source": "http://bell24h.com/(.*)",
      "destination": "https://www.bell24h.com/$1",
      "permanent": true
    },
    {
      "source": "http://www.bell24h.com/(.*)",
      "destination": "https://www.bell24h.com/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}