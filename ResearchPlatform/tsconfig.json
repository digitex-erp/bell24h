
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["dom", "ES2022", "DOM.Iterable"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true, 
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@db": ["db/index.ts"],
      "@server/*": ["server/*"],
      "@contracts/*": ["contracts/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["node_modules"]
}
