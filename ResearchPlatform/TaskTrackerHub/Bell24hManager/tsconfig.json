{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@/*": ["client/src/*"],
      "@assets/*": ["attached_assets/*"]
    }
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "server/**/*.ts",
    "shared/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}