# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://admin:adminpassword@localhost:5432/bell24h

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# WebSocket
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Security
CSRF_SECRET=supersecurecsrfsecret
JWT_SECRET=supersecurejwtsecret

# Monitoring
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@bell24h.com

# Redis
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000

# Monitoring
SUPABASE_SERVICE_KEY=your_supabase_service_key
METRICS_FLUSH_INTERVAL=60000
MAX_METRICS_BUFFER=100

# API Optimization
ENABLE_RESPONSE_COMPRESSION=true
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# RBI Compliance
RBI_LOGGING_ENABLED=true
RBI_LOG_SEVERITY=HIGH
RBI_LOG_RETENTION_DAYS=90

# Performance
API_TIMEOUT=20000
MAX_REQUEST_SIZE=1048576
ENABLE_CACHING=true

# Development
DEBUG=false
LOG_LEVEL=info

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Logging Configuration
SENTRY_DSN=your_sentry_dsn

# Security Configuration
SNYK_TOKEN=your_snyk_token

# API Configuration
API_URL=your_api_url
API_KEY=your_api_key

# Monitoring Configuration
MONITORING_API_KEY=your_monitoring_key

# Supabase Configuration
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Security Configuration
ENCRYPTION_KEY=your_encryption_key