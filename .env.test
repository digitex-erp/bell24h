# Test environment configuration for Bell24h Dashboard
# IMPORTANT: Do not use real production credentials here

# ===== Application Settings =====
NODE_ENV="test"
PORT=3003

# ===== Database Configuration =====
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bell24h_test?schema=public"
DATABASE_NAME=bell24h_test
DATABASE_SYNC=false
DATABASE_LOGGING=false

# ===== Authentication =====
JWT_SECRET="test-secret-key"
JWT_EXPIRES_IN="1h"
PASSWORD_SALT_ROUNDS=10

# ===== Session Configuration =====
SESSION_SECRET="test-session-secret"
SESSION_COOKIE_NAME="bell24h-test-session"
SESSION_LIFETIME="1h"

# ===== Test Users =====
# Admin user
PLAYWRIGHT_TEST_ADMIN_EMAIL=admin@example.com
PLAYWRIGHT_TEST_ADMIN_PASSWORD=admin1234

# Regular user
PLAYWRIGHT_TEST_USER_EMAIL=user@example.com
PLAYWRIGHT_TEST_USER_PASSWORD=user1234

# ===== API Configuration =====
API_PREFIX=/api
API_VERSION=v1
API_TIMEOUT=30000
API_RETRIES=3
API_RETRY_DELAY=1000

# ===== Test Settings =====
# Base URLs
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3001
PLAYWRIGHT_TEST_API_BASE_URL=http://localhost:3001/api

# Timeouts (in milliseconds)
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=5000
ACTION_TIMEOUT=5000
NAVIGATION_TIMEOUT=30000

# Test features
TEST_SCREENSHOTS_ENABLED=true
TEST_VIDEOS_ENABLED=true
TEST_TRACE_ENABLED=false

# Retries
TEST_RETRIES=0
CI_TEST_RETRIES=1

# ===== Email Configuration (Test) =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="test-email@gmail.com"
SMTP_PASS="test-app-specific-password"
SMTP_FROM="Bell24h Test <test@bell24h.com>"

# ===== AWS S3 (Test) =====
AWS_ACCESS_KEY_ID="test-key"
AWS_SECRET_ACCESS_KEY="test-secret"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="bell24h-test"

# ===== Blockchain Configuration (keep existing) =====
# Polygon Mumbai Testnet RPC URL
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com/

# Contract addresses on Mumbai testnet
POLYGON_MILESTONE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Test wallet addresses
TEST_BUYER_ADDRESS=0xaBcD1234aBcD1234aBcD1234aBcD1234aBcD1234
TEST_SELLER_ADDRESS=0x1234aBcD1234aBcD1234aBcD1234aBcD1234aBcD

# Mumbai testnet chain ID
CHAIN_ID=80001

# Hardhat settings
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Optional - Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here
