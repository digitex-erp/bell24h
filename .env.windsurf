# Bell24h Dashboard - WindSurf AI Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3000
NODE_ENV=production
CORS_ORIGIN=*

# Security
JWT_SECRET=replace_with_secure_random_string
SESSION_SECRET=replace_with_different_secure_random_string
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration - Use WindSurf AI PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bell24h
DATABASE_SSL=true
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=bell24h
PGHOST=localhost
PGPORT=5432

# WebSocket Configuration
WS_PORT=8080
HTTP_PORT=5002

# Video Upload (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# M1 Exchange API Integration
M1EXCHANGE_API_KEY=your_m1_exchange_api_key
M1EXCHANGE_API_SECRET=your_m1_exchange_api_secret
M1EXCHANGE_API_URL=https://api.m1exchange.com/v1
