# Bell24h Railway Production Environment Variables
# Extracted from your existing configuration files

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://bell24h-production.up.railway.app
NEXT_PUBLIC_APP_NAME=BELL24H

# Authentication & Security
NEXTAUTH_URL=https://bell24h-production.up.railway.app
NEXTAUTH_SECRET=bell24h-super-secret-key-32-chars-minimum-required
JWT_SECRET=bell24h-jwt-secret-key-32-chars-minimum
ENCRYPTION_KEY=bell24h-encryption-key-32-chars-minimum

# API Keys (from your existing configuration)
API_SECRET_KEY=bell24h-api-secret-key-2024

# Google OAuth (from your existing config)
GOOGLE_ID=your_real_google_client_id.apps.googleusercontent.com
GOOGLE_SECRET=your_real_google_client_secret

# Payment Gateway (Razorpay)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_SECRET=your_razorpay_secret_key

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=bell24h
CLOUDINARY_CLOUD_NAME=bell24h
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_URL=cloudinary://your_cloudinary_api_key:your_cloudinary_api_secret@bell24h

# AI Services
OPENAI_API_KEY=your_openai_api_key
NANO_BANANA_API_KEY=your_nano_banana_api_key

# n8n Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/bell24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@bell24h.com

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_MATCHING=true
NEXT_PUBLIC_ENABLE_VOICE_RFQ=true
NEXT_PUBLIC_ENABLE_ESCROW=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
ENABLE_ESCROW=false
ENABLE_AI_MARKETING=true
ENABLE_UGC=true
ENABLE_MULTI_CHANNEL=true

# Security & Performance
CORS_ORIGIN=https://bell24h-production.up.railway.app
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000
NEXT_TELEMETRY_DISABLED=1

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id

# SEO & Social Media
NEXT_PUBLIC_SITE_NAME=BELL24H
NEXT_PUBLIC_SITE_DESCRIPTION=India's Premier B2B Marketplace
NEXT_PUBLIC_SITE_KEYWORDS=b2b,marketplace,suppliers,buyers,trade

# Logging
LOG_LEVEL=info
