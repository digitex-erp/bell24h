# Bell24h Production Environment Variables
# IMPORTANT: Keep this file secure and never commit to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://bell24h_prod_user:strong_password@production-db-host:5432/bell24h_production
PGUSER=bell24h_prod_user
PGPASSWORD=strong_password
PGHOST=production-db-host
PGPORT=5432
PGDATABASE=bell24h_production

# =============================================================================
# API KEYS & THIRD-PARTY SERVICES - PRODUCTION KEYS
# =============================================================================
# OpenAI API - Production key with appropriate rate limits
OPENAI_API_KEY=sk-...

# KredX Integration - Production credentials
KREDX_API_KEY=kredx_production_key
KREDX_API_URL=https://api.kredx.com/v1
KREDX_WEBHOOK_SECRET=kredx_production_webhook_secret

# Payment Gateway - Production keys
PAYMENT_API_KEY=pk_live_...
PAYMENT_SECRET_KEY=sk_live_...
PAYMENT_WEBHOOK_SECRET=whsec_live_...

# Blockchain Integration - Production network
BLOCKCHAIN_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
BLOCKCHAIN_CHAIN_ID=137  # Polygon Mainnet
ESCROW_CONTRACT_ADDRESS=0x...  # Your deployed production contract address

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server
PORT=8080
NODE_ENV=production
API_PREFIX=/api
SESSION_SECRET=long_random_production_session_secret

# Security & Authentication
JWT_SECRET=long_random_production_jwt_secret
JWT_EXPIRES_IN=1d
BCRYPT_SALT_ROUNDS=12

# CORS Settings - Restrict to production domains
CORS_ORIGIN=https://bell24h.com,https://app.bell24h.com,https://api.bell24h.com

# Rate Limiting - Production values
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VOICE_RFQ=true
ENABLE_VIDEO_RFQ=true
ENABLE_BLOCKCHAIN_PAYMENTS=true
ENABLE_KREDX_INTEGRATION=true
ENABLE_AI_MATCHING=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project

# =============================================================================
# CACHING
# =============================================================================
REDIS_URL=redis://redis-host:6379
CACHE_TTL=3600  # 1 hour in seconds

# =============================================================================
# CDN & STORAGE
# =============================================================================
CDN_URL=https://cdn.bell24h.com
STORAGE_BUCKET=bell24h-production

# =============================================================================
# EMAIL CONFIGURATION - Production SMTP
# =============================================================================
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_USER=notifications@bell24h.com
SMTP_PASSWORD=strong_smtp_password
EMAIL_FROM=no-reply@bell24h.com

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Set appropriate deployment-specific settings
DEPLOYMENT_REGION=ap-south-1  # For AWS-based deployments
INSTANCE_TYPE=t3.medium
MIN_INSTANCES=2
MAX_INSTANCES=10
AUTOSCALING_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/bell24h.pem

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
DB_POOL_SIZE=20
NODE_CLUSTER_INSTANCES=0  # 0 means use available CPU cores
WORKER_PROCESSES=4