# Bell24h Staging Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/bell24h_staging
PGUSER=username
PGPASSWORD=password
PGDATABASE=bell24h_staging
PGHOST=hostname
PGPORT=5432

# Security
SESSION_SECRET=staging_session_secret_replace_with_generated_value
JWT_SECRET=staging_jwt_secret_replace_with_generated_value

# Application Configuration
PORT=5000
NODE_ENV=staging
WS_PORT=8080
HTTP_PORT=5002
LOG_LEVEL=debug

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
# PERPLEXITY_API_KEY=your_perplexity_api_key_here
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# CORS Configuration
CORS_ORIGIN=https://staging.bell24h.com

# Blockchain Configuration (Polygon)
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_PRIVATE_KEY=your_private_key
POLYGON_CONTRACT_ADDRESS=your_contract_address

# Video/Media Storage
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
