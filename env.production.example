# Bell24h Production Environment Variables
# Copy these to Railway dashboard environment variables

# Database
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://bell24h-production.up.railway.app

# Authentication
JWT_SECRET=bell24h-jwt-secret-key-2024-production-super-secure-32-chars
NEXTAUTH_SECRET=bell24h-nextauth-secret-key-2024-production-32-chars
NEXTAUTH_URL=https://bell24h-production.up.railway.app

# API Integrations
NANO_BANANA_API_KEY=your-nano-banana-api-key-here
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/bell24h

# Payment Processing
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# File Storage
CLOUDINARY_URL=cloudinary://your-cloudinary-url

# Features
ENABLE_ESCROW=false
ENABLE_AI_MARKETING=true
ENABLE_UGC=true
ENABLE_MULTI_CHANNEL=true

# Security
CORS_ORIGIN=https://bell24h-production.up.railway.app
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info