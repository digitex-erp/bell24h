# Bell24h Production Environment Configuration Template
# Make a copy of this file named .env.production and fill in all values

# Database Connection
DATABASE_URL=postgresql://username:password@mumbai-postgres.aws-region.rds.amazonaws.com:5432/bell24h_prod

# JWT Authentication
JWT_SECRET=replace_with_secure_random_string_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=replace_with_different_secure_random_string
REFRESH_TOKEN_EXPIRES_IN=30d

# Logistics APIs - Shiprocket
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1
SHIPROCKET_EMAIL=your_shiprocket_email@example.com
SHIPROCKET_PASSWORD=your_shiprocket_password

# Logistics APIs - DHL
DHL_API_URL=https://api-mock.dhl.com/mydhl/
DHL_CLIENT_ID=your_dhl_client_id
DHL_CLIENT_SECRET=your_dhl_client_secret
DHL_ACCOUNT_NUMBER=your_dhl_account_number

# Finance APIs - KredX
KREDX_API_URL=https://api.kredx.com/v1
KREDX_API_KEY=your_kredx_api_key
KREDX_API_SECRET=your_kredx_api_secret

# Finance APIs - M1Exchange
M1EXCHANGE_API_URL=https://api.m1exchange.com/v1
M1EXCHANGE_API_KEY=your_m1exchange_api_key
M1EXCHANGE_USERNAME=your_m1exchange_username
M1EXCHANGE_PASSWORD=your_m1exchange_password

# Google Maps API (for route optimization)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AWS Configuration (used for file storage, monitoring, etc.)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=bell24h-prod-files
AWS_CLOUDWATCH_LOG_GROUP=bell24h-prod-logs

# SSL/TLS Certificate Paths
SSL_CERT_PATH=/etc/ssl/certs/bell24h.crt
SSL_KEY_PATH=/etc/ssl/private/bell24h.key

# RazorpayX (for escrow wallet)
RAZORPAYX_KEY_ID=your_razorpayx_key_id
RAZORPAYX_KEY_SECRET=your_razorpayx_key_secret

# Redis (for caching and rate limiting)
REDIS_URL=redis://redis-server:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per 15 minutes

# Environment
NODE_ENV=production
PORT=3000

# Credential Rotation Configuration
CREDENTIAL_ROTATION_ENABLED=true
CREDENTIAL_ROTATION_INTERVAL_DAYS=90  # Rotate credentials every 90 days
CREDENTIAL_ALERTS_EMAIL=security@bell24h.com

# Database Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_CRON="0 1 * * *"  # Daily backup at 1 AM
DB_BACKUP_RETENTION_DAYS=30  # Keep backups for 30 days
DB_BACKUP_S3_PATH=backups/

# Monitoring and Alerting
ALERT_EMAIL=devops@bell24h.com
ALERT_PHONE=+911234567890

# Feature Flags
ENABLE_LOGISTICS_TRACKING=true
ENABLE_KREDX_INTEGRATION=true
ENABLE_M1EXCHANGE_INTEGRATION=true
ENABLE_BLOCKCHAIN_INTEGRATION=true
