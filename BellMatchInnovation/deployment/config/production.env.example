# Bell24h Production Environment Configuration
# Copy this file to .env in the deployment directory and fill in the values

# Database Configuration
DB_USER=bell24h_prod
DB_PASSWORD=strong_password_here
DB_NAME=bell24h_production
DATABASE_URL=postgres://bell24h_prod:strong_password_here@db:5432/bell24h_production

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
SESSION_SECRET=very_long_random_string_here

# API Keys
GST_API_KEY=your_gst_api_key
GST_API_BASE_URL=https://gst-api.example.com

# AI Services
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# Financial Services
M1_EXCHANGE_API_KEY=your_m1_exchange_api_key
KREDX_API_KEY=your_kredx_api_key

# Blockchain Configuration
ETHEREUM_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_project_id
NETWORK_ID=1
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_password_here

# Domain Configuration
DOMAIN_NAME=bell24h.com