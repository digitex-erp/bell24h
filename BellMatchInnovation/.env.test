# Bell24h Testing Environment Variables
# This file contains settings optimized for automated testing

# =============================================================================
# DATABASE CONFIGURATION - Use separate test database
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bell24h_test
PGUSER=postgres
PGPASSWORD=postgres
PGHOST=localhost
PGPORT=5432
PGDATABASE=bell24h_test

# =============================================================================
# API KEYS & THIRD-PARTY SERVICES - Use mocks or test accounts
# =============================================================================
# OpenAI API - Use test key or mock for testing
OPENAI_API_KEY=sk_test_...

# KredX Integration - Use mock server for tests
KREDX_API_KEY=test_kredx_key
KREDX_API_URL=http://localhost:8080/mock-kredx
KREDX_WEBHOOK_SECRET=test_webhook_secret

# Payment Gateway - Use test keys
PAYMENT_API_KEY=pk_test_...
PAYMENT_SECRET_KEY=sk_test_...
PAYMENT_WEBHOOK_SECRET=whsec_test_...

# Blockchain Integration - Use local hardhat network
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_CHAIN_ID=31337  # Hardhat local network
ESCROW_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3  # Default local deployed address

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server - Use different port for test server
PORT=3001
NODE_ENV=test
API_PREFIX=/api
SESSION_SECRET=test_session_secret

# Security & Authentication
JWT_SECRET=test_jwt_secret
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=4  # Faster for tests

# CORS Settings
CORS_ORIGIN=http://localhost:3001

# Rate Limiting - Disabled for tests
RATE_LIMIT_WINDOW_MS=0
RATE_LIMIT_MAX=0

# =============================================================================
# FEATURE FLAGS - Can be toggled in specific tests
# =============================================================================
ENABLE_VOICE_RFQ=true
ENABLE_VIDEO_RFQ=true
ENABLE_BLOCKCHAIN_PAYMENTS=true
ENABLE_KREDX_INTEGRATION=true
ENABLE_AI_MATCHING=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=error  # Minimal logging for tests
SENTRY_DSN=  # Disabled for tests

# =============================================================================
# CACHING - Disabled for tests
# =============================================================================
REDIS_URL=
CACHE_TTL=0

# =============================================================================
# EMAIL CONFIGURATION - Use test inbox
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025  # Mailhog default port
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=test@bell24h.com