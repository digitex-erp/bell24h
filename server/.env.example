# Server Configuration
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# AWS Configuration (for auto-scaling)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_ASG_NAME=your-auto-scaling-group-name
AWS_SCALE_OUT_POLICY=your-scale-out-policy
AWS_SCALE_IN_POLICY=your-scale-in-policy

# Connection Limits
MAX_CONNECTIONS_PER_INSTANCE=10000
SCALE_UP_THRESHOLD=0.8  # 80% of max connections
SCALE_DOWN_THRESHOLD=0.3  # 30% of max connections

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Redis (for horizontal scaling - optional)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password
