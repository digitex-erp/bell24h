{
  "name": "bell24h-server",
  "version": "1.0.0",
  "description": "Bell24H WebSocket and API server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.mjs --detectOpenHandles --forceExit",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.mjs --detectOpenHandles --forceExit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.mjs --detectOpenHandles --forceExit --testMatch='**/__tests__/integration/**/*.test.ts'",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config=e2e/playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report e2e-results/html",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --config=jest.config.mjs --detectOpenHandles --forceExit",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --config=jest.config.mjs --detectOpenHandles --forceExit",
    "test:ws": "tsx src/test-websocket.ts",
    "test:metrics": "node -e \"require('axios').get('http://localhost:3001/metrics').then(r => console.log(r.data)).catch(e => console.error(e))\"",
    "test:health": "node -e \"require('axios').get('http://localhost:3001/health').then(r => console.log(JSON.stringify(r.data, null, 2))).catch(e => console.error(e))\"",
    "test:load": "tsx src/load-test.ts",
    "monitor": "node -e \"setInterval(() => { const used = process.memoryUsage(); console.clear(); Object.entries(used).map(([k, v]) => console.log(`${k} ${Math.round(v / 1024 / 1024 * 100) / 100} MB`)); }, 1000);\""
  },
  "dependencies": {
    "@aws-sdk/client-auto-scaling": "^3.812.0",
    "@neondatabase/serverless": "^1.0.1",
    "@types/aws-sdk": "^2.7.4",
    "@types/body-parser": "^1.19.5",
    "@types/express-validator": "^3.0.2",
    "@types/ws": "^8.5.10",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.7",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.4",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.52.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.22",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.17.50",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "websocket",
    "realtime",
    "bell24h"
  ],
  "author": "",
  "license": "ISC"
}
