name: E2E
on:
  push: { branches: [ main ] }
  pull_request:
jobs:
  e2e:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with: { node-version: '20' }
      - run: npm ci
      - run: npx playwright install --with-deps
      - env:
          E2E_BASE_URL: ${{ secrets.E2E_BASE_URL }}
        run: npm run test:e2e:ci
