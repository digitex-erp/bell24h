// Live RFQs Section Component
function LiveRFQsSection() {
  const [liveRFQs, setLiveRFQs] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    fetchLiveRFQs();
    // Refresh every 30 seconds
    const interval = setInterval(fetchLiveRFQs, 30000);
    return () => clearInterval(interval);
  }, []);

  const fetchLiveRFQs = async () => {
    try {
      const response = await fetch('/api/rfq/live?limit=6');
      const data = await response.json();
      if (data.success) {
        setLiveRFQs(data.data);
      }
    } catch (error) {
      console.error('Error fetching live RFQs:', error);
    } finally {
      setLoading(false);
    }
  };

  const getTypeIcon = (type: string) => {
    switch (type) {
      case 'video': return <Play className="w-4 h-4" />;
      case 'voice': return <Mic className="w-4 h-4" />;
      default: return <FileText className="w-4 h-4" />;
    }
  };

  const getTypeColor = (type: string) => {
    switch (type) {
      case 'video': return 'bg-red-100 text-red-600';
      case 'voice': return 'bg-blue-100 text-blue-600';
      default: return 'bg-gray-100 text-gray-600';
    }
  };

  const getUrgencyColor = (urgency: string) => {
    switch (urgency) {
      case 'URGENT': return 'bg-red-500';
      case 'HIGH': return 'bg-orange-500';
      case 'MEDIUM': return 'bg-yellow-500';
      default: return 'bg-green-500';
    }
  };

  if (loading) {
    return (
      <section className="py-16 bg-white rounded-2xl shadow-xl mb-20">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto"></div>
          <p className="mt-4 text-gray-600">Loading live RFQs...</p>
        </div>
      </section>
    );
  }

  return (
    <section className="py-16 bg-white rounded-2xl shadow-xl mb-20">
      <div className="text-center mb-12">
        <h2 className="text-5xl font-bold text-gray-900 mb-4">Live RFQs</h2>
        <p className="text-xl text-gray-600">Real-time requests from verified buyers across India</p>
        <div className="flex justify-center items-center gap-4 mt-4">
          <div className="flex items-center gap-2">
            <div className="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <span className="text-sm text-gray-600">Live Updates</span>
          </div>
          <div className="text-sm text-gray-500">•</div>
          <div className="text-sm text-gray-600">{liveRFQs.length} Active RFQs</div>
        </div>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {liveRFQs.map((rfq: any) => (
          <div key={rfq.id} className="bg-gradient-to-br from-gray-50 to-white rounded-xl p-6 border border-gray-200 hover:shadow-lg transition-all duration-300">
            <div className="flex items-start justify-between mb-4">
              <div className="flex items-center gap-2">
                <div className={`p-2 rounded-lg ${getTypeColor(rfq.type)}`}>
                  {getTypeIcon(rfq.type)}
                </div>
                <span className="text-sm font-medium text-gray-600 capitalize">{rfq.type} RFQ</span>
              </div>
              <div className="flex items-center gap-2">
                <div className={`w-2 h-2 rounded-full ${getUrgencyColor(rfq.urgency)}`}></div>
                <span className="text-xs font-medium text-gray-500">{rfq.urgency}</span>
              </div>
            </div>

            <h3 className="text-lg font-bold text-gray-900 mb-2 line-clamp-2">{rfq.title}</h3>
            <p className="text-gray-600 text-sm mb-4 line-clamp-2">{rfq.description}</p>

            <div className="flex items-center justify-between text-sm text-gray-500 mb-4">
              <div className="flex items-center gap-1">
                <Building className="w-4 h-4" />
                <span>{rfq.buyer.name}</span>
              </div>
              <div className="flex items-center gap-1">
                <Clock className="w-4 h-4" />
                <span>{rfq.timeAgo}</span>
              </div>
            </div>

            <div className="flex items-center justify-between mb-4">
              <div className="text-lg font-bold text-indigo-600">
                ₹{(rfq.budget / 100000).toFixed(1)}L
              </div>
              <div className="text-sm text-gray-500">
                {rfq.category}
              </div>
            </div>

            <div className="flex items-center justify-between">
              <div className="flex items-center gap-4 text-sm text-gray-500">
                <div className="flex items-center gap-1">
                  <Users className="w-4 h-4" />
                  <span>{rfq.quotes} quotes</span>
                </div>
                <div className="flex items-center gap-1">
                  <Eye className="w-4 h-4" />
                  <span>{rfq.views} views</span>
                </div>
              </div>
              <button className="bg-gradient-to-r from-indigo-600 to-emerald-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:from-indigo-700 hover:to-emerald-700 transition-all duration-300">
                View Details
              </button>
            </div>
          </div>
        ))}
      </div>

      <div className="text-center mt-8">
        <button className="bg-white text-indigo-600 border-2 border-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-indigo-50 transition-all duration-300">
          View All Live RFQs
        </button>
      </div>
    </section>
  );
}

