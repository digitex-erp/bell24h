# BELL24H Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://bell24h.com
NEXT_PUBLIC_API_URL=https://api.bell24h.com
PORT=3000

# Database
DATABASE_URL=postgresql://bell24h_user:your_secure_password@localhost:5432/bell24h_prod
DB_USER=bell24h_user
DB_PASSWORD=your_secure_password

# Authentication
NEXTAUTH_SECRET=your-super-secret-key-here-make-it-long-and-random
NEXTAUTH_URL=https://bell24h.com
JWT_SECRET=your-jwt-secret-key-here

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_SECRET=your-razorpay-secret-key-here
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@bell24h.com
SMTP_PASS=your-app-password-here
EMAIL_FROM=noreply@bell24h.com

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=westus

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_BUCKET_NAME=bell24h-assets
AWS_REGION=ap-south-1

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
CORS_ORIGIN=https://bell24h.com

# Performance & Caching
NEXT_TELEMETRY_DISABLED=1
NEXT_SHARP_PATH=/tmp/node_modules/sharp

# Third-party Services
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# Development Overrides (for testing)
# NODE_ENV=development
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# DATABASE_URL=postgresql://bell24h_user:password@localhost:5432/bell24h_dev

# Optional: CDN Configuration
CDN_URL=https://cdn.bell24h.com
CDN_API_KEY=your-cdn-api-key-here

# Optional: SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Optional: Push Notifications
FIREBASE_PROJECT_ID=bell24h-app
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@bell24h-app.iam.gserviceaccount.com

# Optional: Search Service
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Optional: Queue Service
BULL_REDIS_URL=redis://localhost:6379
BULL_REDIS_PASSWORD=your-redis-password-here

# Optional: File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400

# Optional: API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=1000

# Optional: Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Optional: Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Optional: Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Optional: Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Optional: SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/bell24h.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/bell24h.com.key

# Optional: Load Balancer
LOAD_BALANCER_IP=your-load-balancer-ip
LOAD_BALANCER_PORT=80

# Optional: Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=your-grafana-password

# Optional: Development Tools
DEBUG=false
NODE_OPTIONS=--max-old-space-size=4096 