# BELL24H Production Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NEXT_PUBLIC_APP_NAME=BELL24H
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/bell24h_prod"
DATABASE_URL_DEV="postgresql://username:password@localhost:5432/bell24h_dev"

# Authentication
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secret-key-here-min-32-chars
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys
NEXT_PUBLIC_API_URL=https://api.your-domain.com
API_SECRET_KEY=your-api-secret-key

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@your-domain.com

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn
LOGTAIL_SOURCE_TOKEN=your-logtail-token

# External Services
OPENAI_API_KEY=your-openai-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Security
JWT_SECRET=your-jwt-secret-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-32-chars

# Performance & Caching
REDIS_URL=redis://localhost:6379
CDN_URL=https://cdn.your-domain.com

# Development
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Blockchain (if applicable)
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
CONTRACT_ADDRESS=your-contract-address

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# SEO & Social Media
NEXT_PUBLIC_SITE_NAME=BELL24H
NEXT_PUBLIC_SITE_DESCRIPTION=India's Premier B2B Marketplace
NEXT_PUBLIC_SITE_KEYWORDS=b2b,marketplace,suppliers,buyers,trade
NEXT_PUBLIC_SITE_IMAGE=https://your-domain.com/og-image.jpg

# Custom Configuration
ASSET_PREFIX=
CUSTOM_KEY=your-custom-value 