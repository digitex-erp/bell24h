# Bell24h Development Environment
# Copy this to .env.local and fill in REAL values

# Database (REQUIRED - Get from Neon, Supabase, or local PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/bell24h_dev"

# NextAuth (REQUIRED - Generate real secrets)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers (OPTIONAL - Get from Google/LinkedIn/GitHub)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Payment Gateways (REQUIRED for payments)
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""

# AI Services (REQUIRED for voice/AI features)
OPENAI_API_KEY=""

# Email (REQUIRED for notifications)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@bell24h.com"

# Redis (OPTIONAL - for caching)
REDIS_URL=""

# Development
NODE_ENV="development"
